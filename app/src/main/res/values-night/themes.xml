<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.FiatScape" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorTextPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryLight</item>
        <item name="colorOnPrimaryContainer">@color/colorTextSecondary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorTextPrimary</item>
        <item name="colorSecondaryContainer">@color/colorAccentLight</item>
        <item name="colorOnSecondaryContainer">@color/colorTextSecondary</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
        <item name="colorSurface">@color/colorPrimaryLight</item>
        <item name="colorOnSurface">@color/colorTextPrimary</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

        <!-- Error colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorTextPrimary</item>
    </style>
</resources>
